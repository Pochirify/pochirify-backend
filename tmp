
// ProductDetail is the resolver for the productDetail field.
func (r *queryResolver) ProductDetail(ctx context.Context, id string) (*graphql1.ProductDetail, error) {
	log.Println(id)
	output, err := r.App.GetProductDetail(
		ctx, &usecase.GetProductDetailInput{
			ProductID: id,
		})
	if err != nil {
		return nil, err
	}
	return response.NewGetProductDetailRes(output), nil
}

// AllActiveProductIDs is the resolver for the allActiveProductIDs field.
func (r *queryResolver) AllActiveProductIDs(ctx context.Context) (*graphql1.AllActiveProductIDs, error) {
	return &graphql1.AllActiveProductIDs{
		Ids: []string{
			"1",
			"2",
		},
	}, nil
}